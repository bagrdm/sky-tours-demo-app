<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseConstraintContainerStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="BaseTextStyle">
        <item name="android:textColor">?attr/labelColor</item>
        <item name="android:textSize">?attr/labelTextSize</item>
    </style>

    <style name="LabelText" parent="BaseTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CountViewStyle" parent="BaseTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rectangle_double_radius</item>
        <item name="android:layout_width">?attr/defaultHW</item>
        <item name="android:layout_height">?attr/defaultHW</item>
        <item name="android:layout_margin">?attr/doubleMargin</item>
    </style>

    <style name="DefaultButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">?attr/doubleMargin</item>
    </style>

    <style name="FromToStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">?attr/fromToTextSize</item>
        <item name="android:minWidth">56dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DefaultImageButtonStyle">
        <item name="android:layout_width">?attr/defaultHW</item>
        <item name="android:layout_height">?attr/defaultHW</item>
        <item name="android:background">@color/tp</item>
    </style>

    <style name="AddRoomButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rectangle</item>
        <item name="icon">@drawable/ic_plus</item>
        <item name="iconTint">@color/teal_main</item>
    </style>

</resources>
