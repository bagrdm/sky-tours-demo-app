<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseConstraintContainerStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="BaseTextStyle">
        <item name="android:textColor">?attr/labelColor</item>
        <item name="android:textSize">?attr/labelTextSize</item>
    </style>

    <style name="LabelText" parent="BaseTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CountViewStyle" parent="BaseTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rectangle_8dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">?attr/doubleMargin</item>
    </style>

    <style name="SearchButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">?attr/doubleMargin</item>
        <item name="android:text">@string/search</item>
        <item name="icon">@drawable/ic_search_24</item>
    </style>

    <style name="FromToStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">?attr/fromToTextSize</item>
        <item name="android:minWidth">56dp</item>
        <item name="android:gravity">center</item>

    </style>

</resources>
