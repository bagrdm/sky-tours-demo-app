<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PreferencesTheme" parent="android:Theme.Light">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">@dimen/horizontal_margin</item>
        <item name="android:padding">@dimen/appPadding</item>
        <item name="android:textSize">@dimen/normalText</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/gray_main</item>
        <item name="android:inputType">phone</item>
    </style>
    <style name="CustomDialogStyle" parent="Theme.AppCompat.Light.Dialog">
<!--        <item name="android:background">@drawable/rectangle2</item>-->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:radius">@dimen/dialog_corner_radius</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="window_tab_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="hdescription_card_constraint">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/rectangle2</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="questionnaire_field_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>
</resources>