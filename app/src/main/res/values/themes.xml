<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SkytoursProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorAccent">@color/teal_main</item> //заголовки настроек
        <item name="colorPrimary">@color/teal_main</item> //основной цвет фокуссировки таба, меню
        <item name="colorPrimaryVariant">@color/pink</item>
        <item name="colorOnPrimary">@color/white_gray</item> //Календарь, диалоги
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_l</item>
        <item name="colorSecondaryVariant">@color/teal_d</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
                <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style
        name="Widget.Material3.CardV" parent="Widget.Material3.CardView.Elevated">
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="Theme.MaterialComponents">
        <item name="cornerSize">50%</item>
    </style>

    <style name="OptionsButton" parent="Theme.MaterialComponents">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:elevation">15dp</item>
        <item name="android:translationZ">10dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="iconSize">20dp</item>
        <item name="iconGravity">start</item>
        <item name="cornerRadius">13dp</item>
    </style>

    <style name="tabTextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/droid_serif</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowColor">@color/gray_main</item>
    </style>

  <style name="OptionsButton_Active" parent="OptionsButton">
        <item name="backgroundTint">@color/teal_d</item>
        <item name="iconTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="OptionsButton_Inactive" parent="OptionsButton">
        <item name="backgroundTint">@color/pink</item>
        <item name="iconTint">@color/green_l</item>
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="Bottom_Menu_Text" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu">
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
        <item name="background">@color/tp</item>
        <item name="backgroundColor">@color/tp</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">40dp</item>
    </style>

    <style name="ThemeOverlay.App.MaterialCalendar" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!-- just override the colors used in the default style -->
        <item name="colorOnPrimary">@color/gray_d</item>
        <item name="colorPrimary">@color/teal_l</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="backgroundTint">@color/teal_main</item>
            <item name="colorSurface">@color/whiteish</item>

        <item name="android:selectedWeekBackgroundColor">#330099FF</item>
        <item name="android:focusedMonthDateColor">#FFFFFFFF</item>
        <item name="android:unfocusedMonthDateColor">#66FFFFFF</item>
        <item name="android:weekNumberColor">#33FFFFFF</item>
        <item name="android:weekSeparatorLineColor">#19FFFFFF</item>
    </style>


    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">20dp</item>
    </style>

</resources>