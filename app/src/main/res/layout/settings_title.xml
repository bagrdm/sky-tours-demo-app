<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/preferences_login_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardCornerRadius="20dp"
    card_view:contentPadding="1dp"
    android:background="@color/white"
    android:clickable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:text="@string/profile"
            android:textColor="@color/gray_main"
            android:textSize="23sp"
            android:textStyle=""
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:text="LogIn"
            card_view:layout_constraintStart_toStartOf="@+id/profile"
            card_view:layout_constraintTop_toBottomOf="@+id/profile" />

        <TextView
            android:id="@+id/question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an Account?"
            android:textSize="10sp"
            android:layout_marginBottom="10dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="@+id/login_button"
            card_view:layout_constraintTop_toBottomOf="@+id/login_button" />


        <TextView
            android:id="@+id/sign_up_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="Sign up"
            android:textSize="10sp"
            android:textColor="@color/teal_main"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toBottomOf="@+id/question"
            card_view:layout_constraintStart_toEndOf="@+id/question"
            card_view:layout_constraintTop_toBottomOf="@+id/login_button"
            card_view:layout_constraintVertical_bias="0.6" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:text="Welcome back,"
            android:textSize="20dp"
            card_view:layout_constraintBottom_toBottomOf="@+id/profile"
            card_view:layout_constraintEnd_toStartOf="@+id/textView"
            card_view:layout_constraintTop_toTopOf="@+id/profile"
            card_view:layout_constraintVertical_bias="0.0">

        </TextView>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="User!"
            android:textSize="20dp"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toBottomOf="@+id/profile"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="@+id/profile"
            card_view:layout_constraintVertical_bias="0.0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="right"
            android:text="@string/save_data_in_account"
            android:textColor="@color/gray_main"
            android:textSize="10sp"
            card_view:layout_constraintEnd_toEndOf="@+id/textView"
            card_view:layout_constraintTop_toBottomOf="@+id/textView" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
