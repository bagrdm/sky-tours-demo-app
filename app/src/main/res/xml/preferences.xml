    <PreferenceCategory
        android:key="@string/appearance"
        android:title="@string/appearance"
        android:icon="@drawable/ic_brush">

        <ListPreference
            android:title="Theme"
            android:defaultValue="@string/follow_system_value"
            android:entries="@array/theme_names_array"
            android:entryValues="@array/theme_values_array"
            android:key="theme_key" />
        <ListPreference
            android:title="Color correction"
            android:defaultValue="@string/follow_system_value"
            android:entries="@array/color_correction_names_array"
            android:entryValues="@array/color_correction_values_array"
            android:key="color_correction_key" />



