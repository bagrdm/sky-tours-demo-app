            android:key="lang_key" />

        <ListPreference
            android:title="Currency"
            android:defaultValue="@string/EUR"
            android:entries="@array/lang_names_array"
            android:entryValues="@array/lang_values_array"
            android:key="curr_key"/>

    </PreferenceCategory>

    <DropDownPreference
